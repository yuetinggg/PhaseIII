<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchRestaurants">

    <TextView
        android:id="@+id/nameLabel"
        android:text="Restaurant Name: " android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nameSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/nameLabel"
        android:maxLines="1"
        android:textColor="#727272"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreLabel"
            android:text="Score * : " android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/scoreSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/scoreLabel"
            android:layout_toLeftOf="@+id/scoreLabel"
            android:maxLines="1"
            android:textColor="#727272"/>

        <Spinner
            android:id="@+id/scoreSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            android:text="~"/>

    </LinearLayout>

    <TextView
        android:id="@+id/zipcodeLabel"
        android:text="Zipcode * : " android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/zipcodeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/zipcodeLabel"
        android:layout_toLeftOf="@+id/zipcodeLabel"
        android:maxLines="1"
        android:textColor="#727272"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cuisinceLabel"
            android:text="Cuisine: " android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/cuisineSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:spinnerMode="dropdown"
            android:text="Select Your Cuisine"/>

    </LinearLayout>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Search"/>

</LinearLayout>
